<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context="com.example.jim.calculator.CalculatorActivity"
    android:weightSum="1">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="183dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:textSize="50sp"
        android:text="0"
        android:id="@+id/textView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.83" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.jim.calculator.CalculatorActivity">


        <Button
            style="@style/ButtonTheme"
            android:text="7"
            android:id="@+id/button7"
            android:onClick="clickButton"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            style="@style/ButtonTheme"
            android:text="8"
            android:id="@+id/button8"
            android:onClick="clickButton"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            style="@style/ButtonTheme"
            android:text="9"
            android:id="@+id/button9"
            android:onClick="clickButton"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            style="@style/ButtonTheme"
            android:text="="
            android:id="@+id/buttonEquals"
            android:onClick="clickButton"
            android:layout_row="6"
            android:layout_column="2" />

        <Button
            style="@style/ButtonTheme"
            android:text="+"
            android:id="@+id/buttonPlus"
            android:onClick="clickButton"
            android:layout_row="6"
            android:layout_column="3" />

        <Button
            style="@style/ButtonTheme"
            android:text="-"
            android:id="@+id/buttonMinus"
            android:onClick="clickButton"
            android:layout_row="5"
            android:layout_column="3" />

        <Button
            style="@style/ButtonTheme"
            android:text="*"
            android:id="@+id/buttonMultiply"
            android:onClick="clickButton"
            android:layout_row="4"
            android:layout_column="3" />

        <Button
            style="@style/ButtonTheme"
            android:text="/"
            android:id="@+id/buttonDivide"
            android:onClick="clickButton"
            android:layout_row="3"
            android:layout_column="3" />


        <Button
            android:id="@+id/buttonBack"
            style="@style/ButtonTheme"
            android:onClick="clickButton"
            android:layout_row="2"
            android:layout_column="2"
            android:drawableRight="@drawable/ic_arrow_back_black_24dp"
            android:paddingRight="30dp" />


        <Button
            style="@style/ButtonTheme"
            android:text="CE"
            android:id="@+id/buttonReset"
            android:onClick="clickButton"
            android:layout_row="2"
            android:layout_column="3" />


        <Button
            style="@style/ButtonTheme"
            android:text="5"
            android:id="@+id/button5"
            android:onClick="clickButton"
            android:layout_row="4"
            android:layout_column="1" />

        <Button
            style="@style/ButtonTheme"
            android:text="4"
            android:id="@+id/button4"
            android:onClick="clickButton"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            style="@style/ButtonTheme"
            android:text="6"
            android:id="@+id/button6"
            android:onClick="clickButton"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            style="@style/ButtonTheme"
            android:text="1"
            android:id="@+id/button1"
            android:onClick="clickButton"
            android:layout_row="5"
            android:layout_column="0" />

        <Button
            style="@style/ButtonTheme"
            android:text="2"
            android:id="@+id/button2"
            android:onClick="clickButton"
            android:layout_row="5"
            android:layout_column="1" />

        <Button
            style="@style/ButtonTheme"
            android:text="3"
            android:id="@+id/button3"
            android:onClick="clickButton"
            android:layout_row="5"
            android:layout_column="2" />

        <Button
            style="@style/ButtonTheme"
            android:text="."
            android:onClick="clickButton"
            android:id="@+id/buttonPeriod"
            android:layout_row="6"
            android:layout_column="0" />

        <Button
            android:text="0"
            android:id="@+id/button0"
            style="@style/ButtonTheme"
            android:onClick="clickButton"
            android:layout_row="6"
            android:layout_column="1" />
        <Button
            android:text="("
            android:id="@+id/buttonOpeningParenthesis"
            style="@style/ButtonTheme"
            android:onClick="clickButton"
            android:layout_column="0"
            android:layout_row="2"/>
        <Button
            android:text=")"
            android:id="@+id/buttonClosingParenthesis"
            style="@style/ButtonTheme"
            android:onClick="clickButton"
            android:layout_column="1"
            android:layout_row="2"/>

    </GridLayout>
    ></LinearLayout>