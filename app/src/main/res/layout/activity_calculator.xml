<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.jim.calculator.CalculatorActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="183dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.83"
        android:gravity="center"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.jim.calculator.CalculatorActivity">


        <Button
            android:id="@+id/button7"
            style="@style/ButtonTheme"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="clickButton"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/ButtonTheme"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="clickButton"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/ButtonTheme"
            android:layout_column="2"
            android:layout_row="3"
            android:onClick="clickButton"
            android:text="9" />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/ButtonTheme"
            android:layout_column="2"
            android:layout_row="6"
            android:onClick="clickButton"
            android:text="=" />

        <Button
            android:id="@+id/buttonPlus"
            style="@style/ButtonTheme"
            android:layout_column="3"
            android:layout_row="6"
            android:onClick="clickButton"
            android:text="+" />

        <Button
            android:id="@+id/buttonMinus"
            style="@style/ButtonTheme"
            android:layout_column="3"
            android:layout_row="5"
            android:onClick="clickButton"
            android:text="-" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/ButtonTheme"
            android:layout_column="3"
            android:layout_row="4"
            android:onClick="clickButton"
            android:text="*" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/ButtonTheme"
            android:layout_column="3"
            android:layout_row="3"
            android:onClick="clickButton"
            android:text="/" />


        <Button
            android:id="@+id/buttonBack"
            style="@style/ButtonTheme"
            android:layout_column="2"
            android:layout_row="2"
            android:drawableRight="@drawable/ic_arrow_back_black_24dp"
            android:onClick="clickButton"
            android:paddingRight="30dp" />


        <Button
            android:id="@+id/buttonReset"
            style="@style/ButtonTheme"
            android:layout_column="3"
            android:layout_row="2"
            android:onClick="clickButton"
            android:text="CE" />


        <Button
            android:id="@+id/button5"
            style="@style/ButtonTheme"
            android:layout_column="1"
            android:layout_row="4"
            android:onClick="clickButton"
            android:text="5" />

        <Button
            android:id="@+id/button4"
            style="@style/ButtonTheme"
            android:layout_column="0"
            android:layout_row="4"
            android:onClick="clickButton"
            android:text="4" />

        <Button
            android:id="@+id/button6"
            style="@style/ButtonTheme"
            android:layout_column="2"
            android:layout_row="4"
            android:onClick="clickButton"
            android:text="6" />

        <Button
            android:id="@+id/button1"
            style="@style/ButtonTheme"
            android:layout_column="0"
            android:layout_row="5"
            android:onClick="clickButton"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/ButtonTheme"
            android:layout_column="1"
            android:layout_row="5"
            android:onClick="clickButton"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/ButtonTheme"
            android:layout_column="2"
            android:layout_row="5"
            android:onClick="clickButton"
            android:text="3" />

        <Button
            android:id="@+id/buttonPeriod"
            style="@style/ButtonTheme"
            android:layout_column="0"
            android:layout_row="6"
            android:onClick="clickButton"
            android:text="." />

        <Button
            android:id="@+id/button0"
            style="@style/ButtonTheme"
            android:layout_column="1"
            android:layout_row="6"
            android:onClick="clickButton"
            android:text="0" />

        <Button
            android:id="@+id/buttonOpeningParenthesis"
            style="@style/ButtonTheme"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="clickButton"
            android:text="(" />

        <Button
            android:id="@+id/buttonClosingParenthesis"
            style="@style/ButtonTheme"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="clickButton"
            android:text=")" />

    </GridLayout>
    >
</LinearLayout>