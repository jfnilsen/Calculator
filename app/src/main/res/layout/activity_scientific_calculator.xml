<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:weightSum="1"
        tools:context="com.example.jim.calculator.CalculatorActivity">




        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/result_text"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result_textView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50sp" />

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.jim.calculator.CalculatorActivity">

            <Button
                android:id="@+id/buttonSin"
                style="@style/ButtonThemeSmall"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Sin"
                android:onClick="clickButton"
                />
            <Button
                android:id="@+id/buttonCos"
                style="@style/ButtonThemeSmall"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Cos"
                android:onClick="clickButton"
                />
            <Button
                android:id="@+id/buttonTan"
                style="@style/ButtonThemeSmall"
                android:layout_row="1"
                android:layout_column="2"
                android:text="Tan"
                android:onClick="clickButton"
                />
            <Button
                android:id="@+id/buttonLog"
                style="@style/ButtonThemeSmall"
                android:layout_row="1"
                android:layout_column="3"
                android:text="Log"
                android:onClick="clickButton"
                />
            <Button
                android:id="@+id/buttonX2"
                style="@style/ButtonThemeSmall"
                android:layout_row="0"
                android:layout_column="0"
                android:text="XÂ²"
                android:onClick="clickButton"
                />
            <Button
                android:id="@+id/buttonYx"
                style="@style/ButtonThemeSmall"
                android:layout_row="0"
                android:layout_column="1"
                android:text="^"
                android:onClick="clickButton"
                />
            <Button
                android:id="@+id/button_close_SqBracket"
                style="@style/ButtonThemeSmall"
                android:layout_row="0"
                android:layout_column="3"
                android:text="]"
                android:onClick="clickButton"/>



            <Button
                android:id="@+id/button7"
                style="@style/ButtonThemeSmall"
                android:layout_column="0"
                android:layout_row="3"
                android:onClick="clickButton"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                style="@style/ButtonThemeSmall"
                android:layout_column="1"
                android:layout_row="3"
                android:onClick="clickButton"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="3"
                android:onClick="clickButton"
                android:text="9" />

            <Button
                android:id="@+id/buttonEquals"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="6"
                android:onClick="clickButton"
                android:text="=" />

            <Button
                android:id="@+id/buttonPlus"
                style="@style/ButtonThemeSmall"
                android:layout_column="3"
                android:layout_row="6"
                android:onClick="clickButton"
                android:text="+" />

            <Button
                android:id="@+id/buttonMinus"
                style="@style/ButtonThemeSmall"
                android:layout_column="3"
                android:layout_row="5"
                android:onClick="clickButton"
                android:text="-" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/ButtonThemeSmall"
                android:layout_column="3"
                android:layout_row="4"
                android:onClick="clickButton"
                android:text="*" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/ButtonThemeSmall"
                android:layout_column="3"
                android:layout_row="3"
                android:onClick="clickButton"
                android:text="/" />


            <Button
                android:id="@+id/buttonBack"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="2"
                android:drawableRight="@drawable/ic_arrow_back_black_24dp"
                android:onClick="clickButton"
                android:paddingRight="30dp" />


            <Button
                android:id="@+id/buttonReset"
                style="@style/ButtonThemeSmall"
                android:layout_column="3"
                android:layout_row="2"
                android:onClick="clickButton"
                android:text="CE" />


            <Button
                android:id="@+id/button5"
                style="@style/ButtonThemeSmall"
                android:layout_column="1"
                android:layout_row="4"
                android:onClick="clickButton"
                android:text="5" />

            <Button
                android:id="@+id/button4"
                style="@style/ButtonThemeSmall"
                android:layout_column="0"
                android:layout_row="4"
                android:onClick="clickButton"
                android:text="4" />

            <Button
                android:id="@+id/button6"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="4"
                android:onClick="clickButton"
                android:text="6" />

            <Button
                android:id="@+id/button1"
                style="@style/ButtonThemeSmall"
                android:layout_column="0"
                android:layout_row="5"
                android:onClick="clickButton"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/ButtonThemeSmall"
                android:layout_column="1"
                android:layout_row="5"
                android:onClick="clickButton"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="5"
                android:onClick="clickButton"
                android:text="3" />

            <Button
                android:id="@+id/buttonPeriod"
                style="@style/ButtonThemeSmall"
                android:layout_column="0"
                android:layout_row="6"
                android:onClick="clickButton"
                android:text="." />

            <Button
                android:id="@+id/button0"
                style="@style/ButtonThemeSmall"
                android:layout_column="1"
                android:layout_row="6"
                android:onClick="clickButton"
                android:text="0" />

            <Button
                android:id="@+id/buttonOpeningParenthesis"
                style="@style/ButtonThemeSmall"
                android:layout_column="0"
                android:layout_row="2"
                android:onClick="clickButton"
                android:text="(" />

            <Button
                android:id="@+id/buttonClosingParenthesis"
                style="@style/ButtonThemeSmall"
                android:layout_column="1"
                android:layout_row="2"
                android:onClick="clickButton"
                android:text=")" />

        </GridLayout>
        >
    </LinearLayout>
</LinearLayout>