<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:weightSum="1"
        tools:context="com.example.jim.calculator.CalculatorActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/result_text"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result_textView"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="50sp"
            android:paddingBottom="30sp"/>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.jim.calculator.CalculatorActivity">

            <Button
                android:id="@+id/buttonSin"
                style="@style/ButtonThemeSmall"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Sin"
                />
            <Button
                android:id="@+id/buttonCos"
                style="@style/ButtonThemeSmall"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Cos"
                />
            <Button
                android:id="@+id/buttonTan"
                style="@style/ButtonThemeSmall"
                android:layout_row="2"
                android:layout_column="2"
                android:text="Tan"
                />
            <Button
                android:id="@+id/buttonLog"
                style="@style/ButtonThemeSmall"
                android:layout_row="2"
                android:layout_column="3"
                android:text="Log"
                />
            <Button
                android:id="@+id/buttonX2"
                style="@style/ButtonThemeSmall"
                android:layout_row="1"
                android:layout_column="0"
                android:text="XÂ²"
                />
            <Button
                android:id="@+id/buttonYx"
                style="@style/ButtonThemeSmall"
                android:layout_row="1"
                android:layout_column="1"
                android:text="^"
                />
            <Button
                android:id="@+id/button_close_SqBracket"
                style="@style/ButtonThemeSmall"
                android:layout_row="1"
                android:layout_column="3"
                android:text="]" />

            <Button
                android:id="@+id/buttonEquals"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="7"
                android:text="=" />

            <Button
                android:id="@+id/buttonPlus"
                style="@style/ButtonThemeSmall"
                android:layout_column="3"
                android:layout_row="7"
                android:text="+" />

            <Button
                android:id="@+id/buttonMinus"
                style="@style/ButtonThemeSmall"
                android:layout_column="3"
                android:layout_row="6"
                android:text="-" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/ButtonThemeSmall"
                android:layout_column="3"
                android:layout_row="5"
                android:text="*" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/ButtonThemeSmall"
                android:layout_column="3"
                android:layout_row="4"
                android:text="/" />


            <Button
                android:id="@+id/buttonBack"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="3"
                android:drawableRight="@drawable/ic_arrow_back_black_24dp"
                android:paddingRight="30dp" />


            <Button
                android:id="@+id/buttonReset"
                style="@style/ButtonThemeSmall"
                android:layout_column="3"
                android:layout_row="3"
                android:text="CE" />

            <Button
                android:id="@+id/buttonPeriod"
                style="@style/ButtonThemeSmall"
                android:layout_column="0"
                android:layout_row="7"
                android:text="." />

            <Button
                android:id="@+id/button0"
                style="@style/ButtonThemeSmall"
                android:layout_column="1"
                android:layout_row="7"
                android:text="0" />

            <Button
                android:id="@+id/button1"
                style="@style/ButtonThemeSmall"
                android:layout_column="0"
                android:layout_row="6"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/ButtonThemeSmall"
                android:layout_column="1"
                android:layout_row="6"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="6"
                android:text="3" />

            <Button
                android:id="@+id/button4"
                style="@style/ButtonThemeSmall"
                android:layout_column="0"
                android:layout_row="5"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                style="@style/ButtonThemeSmall"
                android:layout_column="1"
                android:layout_row="5"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="5"
                android:text="6" />

            <Button
                android:id="@+id/button7"
                style="@style/ButtonThemeSmall"
                android:layout_column="0"
                android:layout_row="4"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                style="@style/ButtonThemeSmall"
                android:layout_column="1"
                android:layout_row="4"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="4"
                android:text="9" />

            <Button
                android:id="@+id/buttonOpeningParenthesis"
                style="@style/ButtonThemeSmall"
                android:layout_column="0"
                android:layout_row="3"
                android:text="(" />

            <Button
                android:id="@+id/buttonClosingParenthesis"
                style="@style/ButtonThemeSmall"
                android:layout_column="1"
                android:layout_row="3"
                android:text=")" />

            <Button
                android:id="@+id/buttonSqrt"
                style="@style/ButtonThemeSmall"
                android:layout_column="2"
                android:layout_row="1"
                android:text="Sqrt"/>

            <Button
                android:id="@+id/buttonExp"
                style="@style/ButtonThemeSmall"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Exp"
                />

            <Button
                android:id="@+id/buttonPi"
                style="@style/ButtonThemeSmall"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Pi"/>

            <Button
                android:id="@+id/buttonTenExp"
                style="@style/ButtonThemeSmall"
                android:layout_row="0"
                android:layout_column="2"
                android:text="10^x"/>

            <Button
                android:id="@+id/buttonPercentage"
                style="@style/ButtonThemeSmall"
                android:layout_row="0"
                android:layout_column="3"
                android:text="%"
                />
        </GridLayout>
    </LinearLayout>
</LinearLayout>